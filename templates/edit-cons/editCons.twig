{% extends "admin/layout.twig" %}

{% block style %}
<style>
.slider {
  -webkit-appearance: none;
  width: 100%;
  height: 15px;
  border-radius: 5px;  
  background: #d3d3d3;
  outline: none;
  opacity: 0.7;
  -webkit-transition: .2s;
  transition: opacity .2s;
}

.slider::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  width: 25px;
  height: 25px;
  border-radius: 50%; 
  background: #7ace4c;
  cursor: pointer;
}

.slider::-moz-range-thumb {
  width: 25px;
  height: 25px;
  border-radius: 50%;
  background: #7ace4c;
  cursor: pointer;
}
</style>
{% endblock %}

{% block content %}
<div id="page-wrapper">
            <div class="container-fluid">
                <div class="row bg-title">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">Propozycja zmiany terminu spotkania</h4>
                    </div>
                    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">
                        <ol class="breadcrumb">
                            <li><a href="#">Strona główna</a></li>
                            <li><a href="admin">Panel nauczyciela</a></li>
                            <li class="active">Propozycja zmiany terminu spotkania</li>
                        </ol>
                    </div>
                </div>
                <!-- /.row -->
                <!-- .row -->
                <div class="row">
                    <div class="col-md-4 col-xs-12">
                        <div class="white-box">
                            <div class="user-bg"> <img width="100%" alt="user" src="assets/admin/images/large/teacher.jpg">

                            </div>
                            <div class="user-btm-box">
                                <div class="col-md-4 col-sm-4 text-center">
                                    <p class="text-purple"><i class="ti-facebook"></i></p>
                                    <h1>dr inż.</h1>
                                </div>
                                <div class="col-md-4 col-sm-4 text-center">
                                    <p class="text-blue"><i class="ti-twitter"></i></p>
                                    <h1> Jan</h1>
                                </div>
                                <div class="col-md-4 col-sm-4 text-center">
                                    <p class="text-danger"><i class="ti-dribbble"></i></p>
                                    <h1>Nowak</h1>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8 col-xs-12">
                        <div class="white-box">
                            <form class="form-horizontal form-material" method="POST">
                                <div class="form-group">
                                    <label class="col-md-12">Data konsultacji</label>
                                    <div class="col-md-12">
                                        <input type="date" class="form-control form-control-line" name="start_date"> </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-12">Godzina rozpoczęcia konsultacji</label>
                                    <div class="col-md-12">
                                        <input type="time" step="600" class="form-control form-control-line" name="start_hour"> </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-md-12" style="padding-bottom: 15px;">Przewidywany czas trwania</label>
                                    <div class="col-md-12">
                                        <div class="slidecontainer">
                                            <input type="range" min="10" max="90" value="10" step="10" class="slider" id="duration" name="dur">
                                         <p style="padding-top: 15px;"><span id="duration-time"></span> minut</p>
                                        </div>
                                </div>
                                <input type="hidden" id="hidden" name="id_consultation" value="">
                                 <div class="form-group">
                                    <label class="col-md-12"></label>
                                    <div class="col-md-12"> </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-sm-12">
                                        <button class="btn btn-success">Edytuj termin</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- /.row -->
            </div>
        </div>
            {% endblock %}
{% block js %}
<script>

    var slider = document.getElementById("duration");
    var output = document.getElementById("duration-time");
    output.innerHTML = slider.value;

    slider.oninput = function() {
    output.innerHTML = this.value;
    }

</script>

<script>

    document.getElementById("hidden").value = (window.location.href.split("="))[1];

</script>
{% endblock %}