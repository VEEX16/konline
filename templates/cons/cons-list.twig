{% extends "layout/layout.twig" %}

{% block css %}
    {% webpack_entry_css 'layout/datatables' %}
    {% webpack_entry_css 'cons/cons-list' %}
{% endblock %}

{% block js %}
    {% webpack_entry_js 'layout/datatables' %}
    {% webpack_entry_js 'cons/cons-list' %}
{% endblock %}

{% block content %}

    <div id="content" class="container">
        <div class="row">

            <div class="col-md-12">
                {% include 'layout/flash.twig' %}
            </div>

            <div class="col-md-12">
                <h1><i class="fas fa-user"></i> {{ __('Cons list') }}</h1>

                <hr>
                <table id="data-table"
                       class="table table-striped table-bordered dt-responsive nowrap dataTable no-footer dtr-inline collapsed">
                    <thead>
                    <tr>
                        <th>{{ __('c.id_consultation') }}</th>
                        <th>{{ __('c.start') }}</th>
                        <th>{{ __('c.end') }}</th>
                        <th>{{ __('c.name') }}</th>
                    </tr>
                    <tfoot></tfoot>
                </table>
                <p></p>
            </div>
        </div>


        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        ...
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}


